    <script>
        // === 1. Navigation ===
        function showSection(sectionId) {
            document.querySelectorAll('main section').forEach(s => {
                s.classList.remove('active-section');
                s.classList.add('hidden-section');
            });
            document.getElementById(sectionId).classList.remove('hidden-section');
            document.getElementById(sectionId).classList.add('active-section');
            
            document.querySelectorAll('.nav-btn').forEach(b => b.classList.remove('active'));
            const btn = Array.from(document.querySelectorAll('.nav-btn')).find(b => b.getAttribute('onclick').includes(sectionId));
            if(btn) btn.classList.add('active');
            window.scrollTo(0,0);
        }

        // === 2. Snow Effect ===
        function createSnowflake() {
            const s = document.createElement('div');
            s.classList.add('snowflake');
            s.innerHTML = Math.random()>0.5 ? 'â„' : 'â…';
            s.style.left = Math.random()*100 + 'vw';
            s.style.animationDuration = Math.random()*3+2+'s';
            s.style.opacity = Math.random();
            s.style.fontSize = Math.random()*10+10+'px';
            document.body.appendChild(s);
            setTimeout(()=>s.remove(),5000);
        }
        setInterval(createSnowflake, 200);

        // === 3. Expense Tracker Logic ===
        let currentCurrency = 'JPY';
        let selectedPayer = '';
        let expenses = JSON.parse(localStorage.getItem('fukuoka_expenses')) || [];

        function setCurrency(curr) {
            currentCurrency = curr;
            document.getElementById('btn-jpy').className = curr === 'JPY' ? 'currency-btn active' : 'currency-btn';
            document.getElementById('btn-hkd').className = curr === 'HKD' ? 'currency-btn active' : 'currency-btn';
        }

        function selectPayer(el, name) {
            document.querySelectorAll('.input-group .member-option').forEach(d => d.classList.remove('selected'));
            el.classList.add('selected');
            selectedPayer = name;
        }

        function toggleSplit(el) {
            el.classList.toggle('selected');
        }

        function addExpense() {
            const name = document.getElementById('item-name').value;
            const amount = parseFloat(document.getElementById('item-amount').value);
            
            // Get involved members
            const involved = [];
            document.querySelectorAll('#split-grid .member-option.selected').forEach(el => involved.push(el.innerText));

            if (!name || !amount || !selectedPayer || involved.length === 0) {
                alert("è«‹å¡«å¯«æ‰€æœ‰è³‡æ–™ (é …ç›®ã€é‡‘é¡ã€ä»˜æ¬¾äººã€å¤¾éŒ¢äºº)ï¼");
                return;
            }

            const expense = {
                id: Date.now(),
                name,
                amount,
                currency: currentCurrency,
                payer: selectedPayer,
                involved: involved
            };

            expenses.push(expense);
            saveAndRender();
            
            // Clear inputs
            document.getElementById('item-name').value = '';
            document.getElementById('item-amount').value = '';
        }

        function deleteExpense(id) {
            if(confirm("ç¢ºå®šåˆªé™¤å‘¢æ¢æ•¸ï¼Ÿ")) {
                expenses = expenses.filter(e => e.id !== id);
                saveAndRender();
            }
        }

        function clearAllExpenses() {
            if(confirm("âš ï¸ è­¦å‘Šï¼šç¢ºå®šæ¸…ç©ºæ‰€æœ‰è¨˜å¸³è³‡æ–™ï¼Ÿä¸èƒ½å¾©åŸï¼")) {
                expenses = [];
                saveAndRender();
            }
        }

        function saveAndRender() {
            localStorage.setItem('fukuoka_expenses', JSON.stringify(expenses));
            renderList();
            calculateTotal();
        }

        function renderList() {
            const list = document.getElementById('expense-list');
            list.innerHTML = '';
            
            expenses.slice().reverse().forEach(e => {
                const div = document.createElement('div');
                div.className = 'history-item';
                div.innerHTML = `
                    <div class="history-info">
                        <span class="history-title">${e.name}</span>
                        <span class="history-meta">${e.payer} æ¯”éŒ¢ â” åˆ†æ¯” ${e.involved.length}äºº</span>
                    </div>
                    <div class="history-amount">${e.currency} ${e.amount.toLocaleString()}</div>
                    <button class="btn-delete" onclick="deleteExpense(${e.id})"><i class="fas fa-trash"></i></button>
                `;
                list.appendChild(div);
            });
        }

        function calculateTotal() {
            let totalHKD = 0;
            let totalJPY = 0;
            expenses.forEach(e => {
                if (e.currency === 'HKD') totalHKD += e.amount;
                if (e.currency === 'JPY') totalJPY += e.amount;
            });
            document.getElementById('total-hkd').innerText = totalHKD.toLocaleString();
            document.getElementById('total-jpy').innerText = totalJPY.toLocaleString();
        }

        // Init
        saveAndRender();

    </script>
</body>
</html>
